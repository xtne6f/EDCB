        <ResourceDictionary x:Key="cusColorSetPanel" >
            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource colorCombo}" />
            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource colorButton}" />
        </ResourceDictionary>
