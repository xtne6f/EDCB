<Window x:Class="EpgTimer.SetApp2DelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="削除設定" Height="450" Width="587" Loaded="Window_Loaded" ShowInTaskbar="False" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">

    <Grid Name="grid_main">
        <Label Content="同時に削除するファイルの拡張子" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" VerticalAlignment="Top" />
        <ListBox Height="100" Margin="35,46,0,0" Name="listBox_ext" VerticalAlignment="Top" HorizontalAlignment="Left" Width="231" SelectionMode="Extended" />
        <Button Content="削除" Height="23" HorizontalAlignment="Left" Margin="280,123,0,0" Name="button_del" VerticalAlignment="Top" Width="54" />
        <TextBox Height="24" HorizontalAlignment="Left" Margin="337,48,0,0" Name="textBox_ext" VerticalAlignment="Top" Width="120" />
        <Button Content="追加" Height="23" HorizontalAlignment="Left" Margin="467,48,0,0" Name="button_add" VerticalAlignment="Top" Width="54" />
        <Label Content="拡張子" Height="28" HorizontalAlignment="Left" Margin="280,46,0,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="自動削除対象フォルダ" Height="28" HorizontalAlignment="Left" Margin="12,152,0,0" VerticalAlignment="Top" />
        <ListBox Height="107" Margin="35,186,44,0" Name="listBox_chk_folder" VerticalAlignment="Top" SelectionMode="Extended" />
        <TextBox Height="24" HorizontalAlignment="Left" Margin="35,328,0,0" Name="textBox_chk_folder" VerticalAlignment="Top" Width="359" />
        <Button Content="削除" Height="23" HorizontalAlignment="Left" Margin="35,299,0,0" Name="button_chk_del" VerticalAlignment="Top" Width="54" />
        <Button Content="追加" Height="23" HorizontalAlignment="Left" Margin="467,328,0,0" Name="button_chk_add" VerticalAlignment="Top" Width="54" />
        <Button Content="開く" Height="23" HorizontalAlignment="Left" Margin="407,328,0,0" Name="button_chk_open" VerticalAlignment="Top" Width="54" Click="button_chk_open_Click" />
        <Button Content="キャンセル" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="button_cancel" VerticalAlignment="Bottom" Width="75" Click="button_cancel_Click" IsCancel="True" />
        <Button Content="OK" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,0,122,12" Name="button_OK" VerticalAlignment="Bottom" Width="75" Click="button_OK_Click" />
    </Grid>
</Window>
