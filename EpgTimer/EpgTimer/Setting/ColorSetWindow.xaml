<Window x:Class="EpgTimer.ColorSetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="色指定" Height="189" Width="370" WindowStartupLocation="CenterOwner">

    <Grid>
        <Label Content="R" Height="28" HorizontalAlignment="Left" Margin="12,6,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="36,8,0,0" Name="textBox_R" VerticalAlignment="Top" Width="39" TextChanged="textBox_R_TextChanged" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="93,8,0,0" Name="slider_R" VerticalAlignment="Top" Width="114"  Minimum="0" Maximum="255" ValueChanged="slider_R_ValueChanged" SmallChange="1" />
        <Label Content="G" Height="28" HorizontalAlignment="Left" Margin="12,32,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="36,34,0,0" Name="textBox_G" VerticalAlignment="Top" Width="39" TextChanged="textBox_G_TextChanged" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="93,34,0,0" Maximum="255" Minimum="0" Name="slider_G" VerticalAlignment="Top" Width="114" ValueChanged="slider_G_ValueChanged" SmallChange="1" />
        <Label Content="B" Height="28" HorizontalAlignment="Left" Margin="12,58,0,0" Name="label3" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="36,60,0,0" Name="textBox_B" VerticalAlignment="Top" Width="39" TextChanged="textBox_B_TextChanged" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="93,60,0,0" Maximum="255" Minimum="0" Name="slider_B" VerticalAlignment="Top" Width="114" ValueChanged="slider_B_ValueChanged" SmallChange="1" />
        <Label Content="A" Height="28" HorizontalAlignment="Left" Margin="12,84,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="36,86,0,0" Name="textBox_A" VerticalAlignment="Top" Width="39" TextChanged="textBox_A_TextChanged" />
        <Slider Height="23" HorizontalAlignment="Left" Margin="93,86,0,0" Maximum="255" Minimum="0" Name="slider_A" VerticalAlignment="Top" Width="114" ValueChanged="slider_A_ValueChanged" SmallChange="1" />
        <Rectangle Height="86" HorizontalAlignment="Left" Margin="222,12,0,0" Name="rectangle_color" Stroke="Black" VerticalAlignment="Top" Width="114" />
        <Button Content="OK" HorizontalAlignment="Left" Margin="163,115,0,0" Name="button_OK" VerticalAlignment="Top" Width="77" Click="button_OK_Click" />
        <Button Content="キャンセル" HorizontalAlignment="Left" Margin="259,115,0,0" Name="button_cancel" VerticalAlignment="Top" Width="77" Click="button_cancel_Click" IsCancel="True" />
    </Grid>
</Window>
