<user:RecInfoDescWindowBase  x:Class="EpgTimer.RecInfoDescWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:user="clr-namespace:EpgTimer"
        Title="録画情報" Height="361" Width="557" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Button Content="再生" HorizontalAlignment="Left" Margin="12,12,0,6" Name="button_play" Width="75" />
        <TabControl Grid.Row="1" >
            <TabItem Header="番組情報" >
                <TextBox Name="textBox_pgInfo" IsReadOnly="True" TextWrapping="Wrap" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" />
            </TabItem>
            <TabItem Header="エラーログ" >
                <TextBox Name="textBox_errLog" IsReadOnly="True" FontFamily="MS Gothic" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" />
            </TabItem>
        </TabControl>
        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" >
            <CheckBox Content="このウィンドウにデータを開く" Margin="6" Name="checkBox_dataReplace" />
            <CheckBox Content="メインウィンドウの前面に表示" Margin="6" Name="checkBox_windowPinned" />
        </WrapPanel>
    </Grid>
</user:RecInfoDescWindowBase>
